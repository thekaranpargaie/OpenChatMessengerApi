@page "/"

<PageTitle>OpenChatMessenger</PageTitle>

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to OpenChatMessenger</h1>
    <p class="lead">A modern, real-time chat platform built with .NET Aspire</p>
    
    <div class="mt-5">
        <a href="/chat" class="btn btn-primary btn-lg">Start Chatting</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Real-Time Messaging</h5>
                    <p class="card-text">Instant message delivery with SignalR technology</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">World Chat</h5>
                    <p class="card-text">Connect with users globally in public channels</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Nearby Users</h5>
                    <p class="card-text">Discover and chat with people in your area</p>
                </div>
            </div>
        </div>
    </div>
</div>
